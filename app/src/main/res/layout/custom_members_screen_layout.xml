<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/memberPhoto"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:paddingBottom="9dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/memberName"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/memberPhoto"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/memberPhoto"
        android:layout_toRightOf="@+id/memberPhoto"
        android:text="TextView"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/joinDate"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/memberName"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6sp"
        android:layout_toRightOf="@+id/memberPhoto"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/removeButtom"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/memberName"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/remove" />
        

</RelativeLayout>